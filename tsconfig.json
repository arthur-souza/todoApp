{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": [
      "es2018",
      "dom"
    ],
    "strict": true,
    "experimentalDecorators": true,
    "allowUnusedLabels": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": [
    "./src/**/*"
  ]
}